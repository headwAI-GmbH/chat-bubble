# Copy this file to .env and update with your values

# Required HeadwAI ONE Configuration (default)
VITE_CHAT_BUBBLE_API_URL=https://company.headwai-one.org
VITE_CHAT_BUBBLE_ASSISTANT_ID=chat-bubble-assistant

# Alternative: Required Open WebUI Configuration
# To use Open WebUI instead of HeadwAI ONE:
#   - Comment out the HeadwAI ONE lines above
#   - Uncomment the Open WebUI lines below and set your values
# VITE_CHAT_BUBBLE_API_URL=https://company.open-webui.org
# VITE_CHAT_BUBBLE_ASSISTANT_ID=chat-bubble-model
# VITE_CHAT_BUBBLE_API_KEY=your-open-webui-api-key-here


# Optional Configuration
VITE_CHAT_BUBBLE_MAX_MESSAGES=0
VITE_CHAT_BUBBLE_PLACEHOLDER_TEXT=Ask your questions here!
VITE_CHAT_BUBBLE_FAVICON_PATH=./icons/favicon.svg
VITE_CHAT_BUBBLE_INITIAL_MESSAGE=Hey, how can I help you?
VITE_CHAT_BUBBLE_TITLE=HeadwAI Chat Bubble
VITE_CHAT_BUBBLE_USER_MESSAGE_BG_COLOR=green
VITE_CHAT_BUBBLE_USER_MESSAGE_TEXT_COLOR=white
VITE_CHAT_BUBBLE_AI_MESSAGE_BG_COLOR=gray
VITE_CHAT_BUBBLE_AI_MESSAGE_TEXT_COLOR=black
VITE_CHAT_BUBBLE_FAVICON_BG_COLOR=lightgreen
VITE_CHAT_BUBBLE_FONT_FAMILY=Arial, sans-serif
VITE_CHAT_BUBBLE_FONT_SIZE=16px
VITE_CHAT_BUBBLE_DISCLAIMER_TITLE="Terms of <strong>Service</strong>"
VITE_CHAT_BUBBLE_DISCLAIMER_MESSAGE="<p>By using this chat, you agree to:</p><ul><li><strong>Privacy:</strong> Your data is protected</li><li><strong>Usage:</strong> Chat responsibly</li><li>See <a href='/terms'>full terms</a></li></ul>"
VITE_CHAT_BUBBLE_INFO_TITLE=Information
VITE_CHAT_BUBBLE_INFO_MESSAGE="<h4>Privacy Notice</h4><p>This chat uses <strong>AI technology</strong>. Key points:</p><ul><li>Messages are processed for <em>AI responses</em></li><li>See our <a href='/privacy'>privacy policy</a></li><li>Use <code>secure connections</code> only</li></ul><blockquote>Your privacy is our priority</blockquote>"


# Internationalization
# Supported locales: en-GB (default), de-DE, de-AT
# If not set, will auto-detect from browser language with fallback to en-GB
VITE_CHAT_BUBBLE_LOCALE=en-GB
